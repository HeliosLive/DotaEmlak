@model EmlakProjesi.Models.Advert

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h3>İlanın Haritadaki Konumu</h3>
    <div id="map"></div>
    <script>

        var konum_y =@Model.MapLongitude;
        var konum_x =@Model.MapLatitude;
      function initMap() {
          //var konum = {lat: -25.363, lng: 131.044};
          var konum = {lat: konum_x, lng: konum_y};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: konum
        });
        var marker = new google.maps.Marker({
          position: konum,
          map: map,
          animation: google.maps.Animation.BOUNCE
        });
      }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDO1sAja72z1r8_ADRjdluGZeQTTtp6P4Q&callback=initMap">
    </script>
  
</body>
</html>