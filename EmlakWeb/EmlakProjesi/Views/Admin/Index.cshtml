<script>
    $(document).ready(function () {
        $('#AdvertApproval').click(function () {
            $('#ilanonay').show();
            $('#ilansil').hide(); 
        });
        $('#AdvertDelete').click(function () {
            $('#ilanonay').hide();
            $('#ilansil').show();
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('.nav-top-item').click(function () {
            $('.nav-top-item').removeClass("current");
            $(this).addClass("current");
            $('.PartialAdmin').hide();
            var id = $(this).attr('id');
            $('.' + id).show();
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('#ilekle').click(function () {
            $('.nav-top-item').removeClass("current");
            $(this).addClass("current");
            $('.PartialAdmin').hide();
            var id = $(this).attr('id');
            $('.' + id).show();
        });
    });
</script>
<script>
    $(document).ready(function () {
        $('#tab1').show();
        $('#tab2').hide();
        $('#tab3').hide();
    });
</script>
<script>
    $("#onaytab").click(function () {
        $('#tab1').show();
        $('#tab2').hide();
        $('#tab3').hide();
        $('#satistab').removeClass("current");  //tab3
        $('#onaylıtab').removeClass("current"); //tab2
        $('#onaytab').addClass("current");  //tab1
    });
    $("#onaylıtab").click(function () {
        $('#tab2').show();
        $('#tab1').hide();
        $('#tab3').hide();
        $('#satistab').removeClass("current");  //tab3
        $('#onaylıtab').addClass("current"); //tab2
        $('#onaytab').removeClass("current");  //tab1
    });
    $("#satistab").click(function () {
        $('#tab3').show();
        $('#tab2').hide();
        $('#tab1').hide();
        $('#satistab').addClass("current");  //tab3
        $('#onaylıtab').removeClass("current"); //tab2
        $('#onaytab').removeClass("current");  //tab1
    });
</script>

