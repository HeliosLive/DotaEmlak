<script>
    $(document).ready(function () {
        if ($("#Viewbagsınıf").text() == "il") { $('#Cities').trigger("click"); }
        if ($("#Viewbagsınıf").text() == "ilce") { $('#Districts').trigger("click"); }
        if ($("#Viewbagsınıf").text() == "isitma") { $('#Heatings').trigger("click"); }
