                <th>
                    @Html.DisplayNameFor(model => model.EmlakTipi.Ad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SatisTipi.Ad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.il.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ilce.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ilantipi.Premium)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MainImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boyut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kacoda.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmlakTipi.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SatisTipi.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.il.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ilce.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ilantipi.Premium)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                </td>
            </tr>
            }

        </table>

    </div>
</div>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/fileinput.min.js"></script>

