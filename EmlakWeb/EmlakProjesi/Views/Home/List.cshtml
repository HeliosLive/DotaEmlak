@model IEnumerable<EmlakProjesi.Models.Advert>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/fileinput.min.css" rel="stylesheet" />

<h2>Anasayfa</h2>

<p>
    @null
</p>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MainImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Boyut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.kacoda.Ad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fiyat)
                </th>
                <th> 
                    <span style="font-size:small" >@Html.DisplayNameFor(model => model.StartDate)</span>
