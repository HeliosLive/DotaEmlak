<script>
     
    $(".telno").change( function () {
        if ($(this).val().length != 10) {
            alert('Telefon Numarasını başında 0 olmayacak şekilde 10 haneli giriniz');
        }
    });

    $("#RePassword").change(function () {
        if ($(this).val() != $('#Password').val()) {
            alert('Şifreler Uyuşmuyor!');
        }
    });


    $('#goregister').click(function () {
        $('#loginpage').hide();
        $('#registerpage').show();
    });

    $('#gologin').click(function () {
        $('#forgotpage').hide();
        $('#registerpage').hide();
        $('#loginpage').show();
    });

    $('#gologin1').click(function () {
        $('#forgotpage').hide();
        $('#registerpage').hide();
        $('#loginpage').show();
    });

    $('#goforgot').click(function () {
        $('#forgotpage').show();
        $('#registerpage').hide();
        $('#loginpage').hide();
    });

    $('.LoginInfo').click(function(){
        $(this).toggle("slow");
    });
</script> 